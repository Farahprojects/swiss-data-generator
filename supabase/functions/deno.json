{
  "compilerOptions": {
    "lib": ["deno.window", "deno.ns", "esnext"],
    "strict": true,
    "noImplicitAny": false,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}

